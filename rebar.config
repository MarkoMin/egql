{erl_opts,
 [warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_format,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_untyped_record,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars,
  debug_info
 ]}.

{cover_enabled, true}.

{deps, []}.

{profiles, [
    {test, [
            {erl_opts, [nowarn_export_all]}
    ]}
]}.

{project_plugins,
    [geas_rebar3,
     rebar3_hex,
     rebar3_ex_doc
]}.

{minimum_otp_vsn, "26.0"}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.

{ex_doc, [
    {extras, [
          {"CHANGELOG.md", #{title => "Changelog"}},
          {"README.md", #{title => "Overview"}},
          {"LICENSE", #{title => "License"}}
    ]},
    {main, "README.md"},
    {homepage_url, "https://github.com/MarkoMin/egql"},
    {source_url, "https://github.com/MarkoMin/egql"},
    {api_reference, false}
]}.
